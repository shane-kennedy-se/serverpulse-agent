server:
  # ServerPulse server endpoint
  endpoint: "https://your-serverpulse-domain.com"
  
  # Authentication token for the agent
  auth_token: "your-auth-token-here"
  
  # Unique agent identifier (auto-generated or custom)
  agent_id: "auto-generated-id"

collection:
  # Data collection interval in seconds
  interval: 30
  
  # Metrics to collect
  metrics:
    - system_stats
    - disk_usage
    - network_stats
    - process_list

monitoring:
  # System services to monitor
  services:
    - ssh
    - sshd
    - nginx
    - apache2
    - mysql
    - postgresql
    - docker
    - fail2ban
  
  # Log files to monitor for crashes
  log_paths:
    - /var/log/syslog
    - /var/log/kern.log
    - /var/log/messages
  
  # Custom log monitoring configuration
  custom_logs:
    - path: /var/log/auth.log
      parser: auth
      patterns:
        - "Failed password.*"
        - "Invalid user.*"
        - "authentication failure.*"
    
    - path: /var/log/nginx/error.log
      parser: nginx
      patterns:
        - ".*\\[error\\].*"
        - ".*\\[crit\\].*"
        - ".*\\[alert\\].*"
        - ".*\\[emerg\\].*"
    
    - path: /var/log/apache2/error.log
      parser: apache
      patterns:
        - ".*\\[error\\].*"
        - ".*\\[crit\\].*"
        - ".*\\[alert\\].*"
        - ".*\\[emerg\\].*"

alerts:
  # CPU usage threshold (percentage)
  cpu_threshold: 80
  
  # Memory usage threshold (percentage)
  memory_threshold: 85
  
  # Disk usage threshold (percentage)
  disk_threshold: 90
  
  # Load average threshold
  load_threshold: 5.0

logging:
  # Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
  level: INFO
  
  # Log file path
  file: /var/log/serverpulse-agent.log
  
  # Maximum log file size before rotation
  max_size: 10MB
  
  # Number of backup log files to keep
  backup_count: 5

# Optional network configuration
network:
  # Connection timeout in seconds
  timeout: 30
  
  # Maximum number of retry attempts
  max_retries: 3
  
  # Proxy settings (optional)
  # proxy:
  #   http: "http://proxy.example.com:8080"
  #   https: "https://proxy.example.com:8080"
  #   no_proxy: "localhost,127.0.0.1"

# Security settings
security:
  # Verify SSL certificates
  verify_ssl: true
  
  # Custom CA certificate file (optional)
  # ca_cert_file: /path/to/ca-cert.pem
